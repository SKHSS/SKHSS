@{Layout = null;}
<style>
    #content {padding:0;}
    #season {position:relative;float:right;width:60%;width:calc(100% - 450px);min-width:420px;/*position:absolute;top:0;right:0;*/border-left:1px solid black;height:100%;overflow-y:auto;padding-top:10px;}
    #year {position:relative;float:left;width:40%;width:calc(450px);padding:5px;}
    #season h2 {margin-left:10px;margin-bottom:15px;}
    #year h2 {margin:5px;}
    #list{padding-bottom:1px;}
    .li{border-left:1px solid #ccc;background-color:#cccccc;box-shadow: 1px 2px 7px #000;-moz-box-shadow: 1px 2px 7px #000;-webkit-box-shadow: 1px 2px 7px #000;max-height:42px;font-size:14px;position:relative;transition: all .3s linear;overflow:hidden;top:0px;}
    .li:last-of-type{margin-bottom:15px;}
    .upper{padding:5px;padding-top:12px;background-color:White;height:40px;position:relative;margin-bottom:5px;margin-left:-1px;cursor:pointer;box-shadow: 0px 2px 4px -1px #000;-moz-box-shadow: 0px 2px 4px -1px #000;-webkit-box-shadow: 0px 2px 4px -1px #000;overflow:hidden;}
    .lower{padding:2px 5px 7px 8px;background-color:#cccccc;line-height:20px;}
    .text{position:absolute;left:140px;}
    .date2{position:absolute;left:80px;}
    .arr{position:absolute;height:20px;width:20px;display:none;right:10px;top:10px;background-image:url("../../Content/icons/text.png");}
    .hastext:hover:not(.selected) {max-height:56px;top:-15px;margin-bottom:-14px}
    /*.hastext:hover:not(.selected):first-child {top:0;margin-bottom:0;}*/
    .selected{max-height:999px;}
    .loadingif {position:absolute;top:2px;right:2px;width:15px;}
    
    .title {padding-left:20px;border-bottom:1px solid black;}
    #year li {margin-bottom:5px;}
    #year li img {width:15px;height:15px;position:relative;top:2px;margin-right:-15px;}
    #year li span:first-of-type {width:48px;display:inline-block;font-weight:bold;margin-right:10px;margin-left:20px}
    @@media screen and (max-width: 800px) {
        #year {width:40%;}
        #season{width:60%;min-width:0px;}
    }
    @@media screen and (max-width: 460px) {
        #year,#season {width:100%;float:left;position:relative;}
        #season {height:auto;border-left:none;border-top:2px solid black;padding-top:12px;margin-bottom:10px;overflow-y:initial;}
        .upper {font-size:12px;}
        .upper .date2 {left:62px;}
        .upper .text {left:100px;}
        .hastext:hover:not(.selected) {max-height:42px;top:0px;margin-bottom:0px}
    }
</style>