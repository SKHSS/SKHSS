@{Layout = null;}
<style>
    #exterior
    {
        position:relative;
        width:100%;
        width:calc(100% - 20px);
        text-align:center;
    }
    #interior
    {
        display:inline-block;
        margin: 0 auto;
        min-width:500px;
        border:1px solid black;
        border-radius:5px;
        padding:10px;
        box-shadow: inset 0 0 5px #ccc;
        -moz-box-shadow: inset 0 0 5px #ccc;
        -webkit-box-shadow: inset 0 0 5px #ccc;
        box-sizing:content-box;
    }
    #left
    {
        width:15%;
        padding-right:5px;
        text-align:right;
        box-sizing:border-box;
        float:left;
        line-height:26px;
    }
    #right
    {
        width:85%;
        padding-left:15px;
        text-align:left;
        box-sizing:border-box;
        float:right;
        line-height:23px;
    }
    #left .c
    {
        display:block;
        margin-top:5px;
    }
    #left .c:first-child{margin-top:0px;}
    #left .c:nth-child(2){margin-top:25px;}
    #right .c
    {
        width:90%;
        margin-top:5px;
        
    }
    #Message
    {
        margin-top:2px;
        height:200px;
    }
    #sub
    {
        margin-left:-1px;
        margin-top:5px;
        font-size:18px;
    }
    textarea,input
    {
        font-family:inherit;
    }
    #loading
    {
        position:relative;
        top:3px;
        width:20px;
        height:20px;
    }
    #feederror,#remain {float:right;margin-right:10%;}
    @@media screen and (max-width: 545px) {
        
        #interior {width:100%;min-width:0;box-shadow:none;-moz-box-shadow:none;-webkit-box-shadow:none;border:none;}
    }
</style>