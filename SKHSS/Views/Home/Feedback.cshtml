@using SKHSS.Models.PageModels
@using SKHSS.Helpers
@model FeedbackPageModel
@{
    ViewBag.Title = "Feedback";
    Boolean m = User.Identity.IsAuthenticated;
    
    
}
<style>
    #exterior
    {
        position:relative;
        width:100%;
        text-align:center;
    }
    #interior
    {
        display:inline-block;
        margin: 0 auto;
        min-width:500px;
        border:1px solid black;
        border-radius:5px;
        padding:10px;
        box-shadow: inset 0 0 5px #ccc;
        -moz-box-shadow: inset 0 0 5px #ccc;
        -webkit-box-shadow: inset 0 0 5px #ccc;
        box-sizing:content-box;
    }
    #left
    {
        width:15%;
        padding-right:5px;
        text-align:right;
        box-sizing:border-box;
        float:left;
        line-height:26px;
    }
    #right
    {
        width:85%;
        padding-left:15px;
        text-align:left;
        box-sizing:border-box;
        float:right;
        line-height:23px;
    }
    #left .c
    {
        display:block;
        margin-top:5px;
    }
    #left .c:first-child{margin-top:0px;}
    #right .c
    {
        width:90%;
        margin-top:5px;
        
    }
    #message
    {
        margin-top:2px;
        height:200px;
    }
    #sub
    {
        margin-left:-1px;
        margin-top:5px;
        font-size:18px;
    }
    textarea,input
    {
        font-family:inherit;
    }
    #loading
    {
        position:relative;
        top:3px;
        width:20px;
        height:20px;
    }
</style>
<h2>Feedback</h2>
This is where you can give feedback straight to the developer of this website. You can give suggestions, report errors, anything you want to say to the developer.
<br /><br />
@using (Html.BeginForm())
{
<div id="exterior">
    <div id="interior">
        <div id="left">
            <span class="c">Data</span>
            <span class="c">Name</span>
            <span class="c">Email</span>
            <span class="c">Message</span>
        </div>
        <div id="right">
            <span class="c">@(m?"Member Type: "+Global.HighestRoleText(User.Identity.Name)+",":"") <span id="browser"></span></span>
            <input type="text" class="c text-box" id="name" />
            <input type="text" class="c text-box" id="email" />
            <textarea rows="5" style="" class="c text-box" id="message" ></textarea>
            <span id="loadingarea" style="display:none;">
                Sending... 
                <img src="../../Content/loading.gif" id="loading"/>
            </span>
            <input type="submit" value="Send" class="fncybtn" id="sub" />
        </div>
    </div>
</div>
}
